    <title>Blood Bank Registration</title>
     <link rel="stylesheet" href="css/home.css">
    <style>
               * {
    box-sizing: border-box;
     
}

body{
    background-image: whitesmoke;
   
}


#body_1 {
    height: 120vh;
    width: 40vw;
    background-color:rgba(244, 224, 224, 0.999);
    
    margin-top: 30px;
    margin-left: 30vw;
    padding-left: 5vw;
    padding-top: 5vh;
    border-radius: 8px;
    border: 3px solid black;
}

.para {
    text-align: left;
    font-size: 18px;
    font-family: Arial, Helvetica, sans-serif;
}

input {
    width: 25vw;
    height: 5vh;
    border-radius: 8px;
    border: 3px solid black;
    font-size: 18px;
    padding-left: 8px;
    color: black;
    
}

#alpha {
    text-align: center;
    padding-right: 30px;
}

input::placeholder {
    font-size: 18px;
}

select {
    width: 25vw;
    height: 5vh;
    border: 3px solid black;
    border-radius: 8px;
}

button {
    width: 10vw;
    height: 5vh;
    border: 3px solid black;
    border-radius: 8px;
    font-size: 18px;
}

button:hover {
    background-color: greenyellow;
}

#Add {
    margin-top: 5px;
}

hr {
    margin-top: 80px;
}
#btn{
    margin-top: 5vh;
    width:10vw;
    height: 4vh;
    margin-left: 10vh;
}
#btn:hover{
     background-color: burlywood;
}
li{
    list-style: none;
    text-decoration: none;
}

</style>
</head>
<header>
    <div class="main">
    <div class="navbar">
      <div class="icon">

        <img
          src="https://cdn.pixabay.com/photo/2013/07/13/09/48/blood-156063__480.png"
          alt="LOGO"
          style="height: 80px; width:80px; border:2px solid white; border-radius:60%; margin:0px 10px 20px 10px ;">

        <h1 style="margin-left: 25px; color: #961e1b;">Blood Bank Management</h1>
        <div class="topnav" style="margin-left: 25vw; padding:20px; font-size:20px; font-family:Arial, Helvetica, sans-serif;color:white;float:left;">
          <a href="/">Home</a>
          <a href="/dashboard">Dashboard</a>
          <a href="/contact_us">Contact</a>
          
        </div>
      </div>
    </div>
  </div>
</header>

<body>
    <form class="regform" action="/admin_registration" method="POST">
        <div class="container" id="body_1">
            <h1 id="alpha">Blood Bank Registration</h1>
            <p class="para">Enter Blood Bank Name</p>
            <input type="text" value="" placeholder="Blood Bank Name"  name="bankname"required>
            <p class="para" id="address">Address</p>
            <input type="text" id="Add" value="" placeholder="First Line"  name="firstline"><br>
            
            <p class="para"> Enter your Pin Code</p>
            <input type="text" value="" placeholder="Pin Code"  name="pin" required>
            <p class="para">Contact</p>
            <input type="tel" value="" placeholder="Contact"  name="contact" required>
            <p class="para">Email</p>
            <input type="email" placeholder="E-mail"  name="email" required>
            <p class="para">Create Password</p>
            <input type="password" placeholder="Password"  name="password" required>
            <input id="btn" type="submit" value="Registration">
    </form>
</body>

